# norootforbuild

Name:           @NAME@
Version:        @VERSION@
Release:        @RELEASE@
License:        @LICENSE@
Group:          @GROUP@
Url:            @URL@
Source1:        %name-%version-%release.%_target_cpu.rpm
Source2:        %name.cpio.rsasigned
BuildRoot:      %_tmppath/%name-%version-repackage
Summary:        @SUMMARY@
%description
@DESCRIPTION@

%prep
%setup -cT -n %name-%version-repack

%build

%install

rpm=%_sourcedir/%name-%version-%release.%_target_cpu.rpm
pushd %buildroot
rpm2cpio "$rpm" | cpio -idm
cpio -idm <%_sourcedir/%name.cpio.rsasigned
popd
echo '%%defattr(-, root, root)' >%name.files
/usr/lib/rpm/rpm2filelist -d %buildroot -p "$rpm" >>%name.files

%files -f %name.files

